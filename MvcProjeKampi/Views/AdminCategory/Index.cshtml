@using EntityLayer.Concrete
@model List<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-md-12 text-right mt-5">
    <a href="/AdminCategory/AddCategory" class=" btn btn-danger"><i class="fa fa-plus"></i> Yeni Kategori</a>
</div>

<div class="col-md-12 mt-5">
    <table class=" table table-bordered">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Başlıklar</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.CategoryID</th>
                <td>@item.CategoryName</td>
                <td><a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-danger"><i class="fa fa-trash-alt"></i>  Sil</a></td>
                <td><a href="/AdminCategory/EditCategory/@item.CategoryID" class="btn btn-warning"><i class="fa fa-edit"></i>  Güncelle</a></td>
                <td><a href="#" class="btn btn-primary"><i class="fa fa-list"></i> Başlıklar</a></td>
            </tr>
        }
    </table>
</div>


@section _HeaderCss{

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
}
