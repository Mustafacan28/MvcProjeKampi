@using EntityLayer.Concrete

@model List<Heading>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

  
<link href="~/Content/StyleSheet1.css" rel="stylesheet" />

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <!-- Navbar -->
    <!-- /.navbar -->
    <!-- Main Sidebar Container -->
    <!-- Content Wrapper. Contains page content -->
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Başlıklar</h1>
                </div>
                <a style="margin-left:399px" href="/Heading/AddHeading/" class="btn btn-info"> Yeni Başlık Girişi</a>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->



        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Başlık İşlemleri</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Başlık Adı
                            </th>
                            <th style="width: 10%">
                                Oluşturan Yazar
                            </th>
                            <th style="width: 10%">
                                Durum
                            </th>
                            <th style="width: 8%" class="text-center">
                                Kategori
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @{ string hds1 = "";}
                        @{ string hds2 = "";}

                        @foreach (var item in Model)
                        {

                            if (item.HeadingStatus == true)
                            {
                                hds1 = "Aktif";
                                hds2 = "Pasif Yap";
                            }
                            else if (item.HeadingStatus == false)
                            {
                                hds1 = "Pasif";
                                hds2 = "Aktif Yap";
                            }
                            <tr>
                                <td>
                                    @item.HeadingID
                                </td>
                                <td>
                                    <a class=" badge badge-pill aqua ">
                                        <span style="font-size: initial"> @item.HeadingName</span>
                                    </a>
                                    <br />
                                    <small class="badge badge-pill badge-warning">
                                        @item.HeadingDate.ToShortDateString()
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="~/AdminLTE-3.0.4/dist/img/avatar.png">
                                        </li>
                                    </ul>
                                </td>
                                <td>
                                    @hds1
                                </td>
                                
                                <td class="project-state">
                                    <span class="badge badge-pill gecis" style="font-size:medium">@item.Category.CategoryName</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-outline-primary btn-sm" href="/Content/ContentByHeading/@item.HeadingID">
                                        <i class="fas fa-folder">
                                        </i>
                                        İçerikler
                                    </a>
                                    <a class="btn btn-outline-success btn-sm" href="/Heading/EditHeading/@item.HeadingID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-outline-danger btn-sm" href="/Heading/DeletedHeading/@item.HeadingID">
                                        <i class="fas fa-trash">
                                        </i>
                                        @hds2
                                    </a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
    <!-- /.content-wrapper -->


    <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
</body>
</html>
